<UserControl
    x:Class="LayuiFundamentalElement.Views.Form"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Lay="clr-namespace:LayuiTemplate.Control;assembly=LayuiTemplate"
    xmlns:LayHelper="clr-namespace:LayuiTemplate.Extend;assembly=LayuiTemplate"
    xmlns:Nv="clr-namespace:Layui.Core.Resource;assembly=Layui.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:LayuiFundamentalElement.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignWidth="1080"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="White"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <ScrollViewer>
        <StackPanel Margin="6">
            <Lay:LayLegend Header="表单集合演示" />
            <Lay:LayTextBox Width="auto" Margin="0,5" />
            <Lay:LayTextBox
                Width="auto"
                Margin="0,5"
                LayHelper:LayTextBoxHelper.InputType="Number"
                Watermark="只允许输入数字" />
            <Lay:LayTextBox
                Width="auto"
                Margin="0,5"
                LayHelper:LayTextBoxHelper.InputType="Phone"
                Watermark="只允许输入电话号码" />
            <Lay:LayAutoCompleteTextBox Margin="0,5" ItemsSource="{Binding ListDatas}">
                <Lay:LayAutoCompleteTextBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding .}" />
                    </DataTemplate>
                </Lay:LayAutoCompleteTextBox.ItemTemplate>
            </Lay:LayAutoCompleteTextBox>
            <Lay:LayPasswordBox
                x:Name="Test"
                Margin="0,5"
                IsShowPasswrod="True"
                Text="{Binding Password}" />
            <StackPanel Margin="0,5" Orientation="Horizontal">
                <Lay:LayNumericUpDown
                    Width="150"
                    HorizontalAlignment="Left"
                    Increment="0.1"
                    ToolTip="横向模式" />
                <Lay:LayNumericUpDown
                    Width="150"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    Increment="0.1"
                    Orientation="Vertical"
                    ToolTip="纵向模式" />
                <Lay:LayNumericUpDown
                    Width="150"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    Increment="0.1"
                    IsReadOnly="true"
                    ToolTip="只读模式" />
                <Lay:LayNumericUpDown
                    Width="150"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    Increment="0.1"
                    IsEnabled="False"
                    Orientation="Vertical" />
            </StackPanel>
            <Lay:LayComboBox Margin="0,5">
                <Lay:LayComboBoxItem Content="123" />
                <Lay:LayComboBoxItem Content="234" />
            </Lay:LayComboBox>
            <Lay:LayComboBox
                Margin="0,5"
                IsEditable="True"
                Watermark="可编辑下拉框">
                <Lay:LayComboBoxItem Content="123" />
                <Lay:LayComboBoxItem Content="234" />
            </Lay:LayComboBox>
            <StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <Lay:LayCheckBox Content="空" IsChecked="{x:Null}" />
                    <Lay:LayCheckBox
                        Margin="10,0"
                        Content="写作"
                        IsChecked="True" />
                    <Lay:LayCheckBox Margin="10,0" Content="阅读" />
                    <Lay:LayCheckBox
                        Content="游戏"
                        IsChecked="True"
                        IsEnabled="False" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <Lay:LayCheckBox Content="写作" Type="Default" />
                    <Lay:LayCheckBox
                        Margin="5,0"
                        Content="阅读阅读"
                        Type="Default" />
                    <Lay:LayCheckBox
                        Content="游戏"
                        IsEnabled="False"
                        Type="Default" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <Lay:LayRadioButton
                        Content="男"
                        FontSize="16"
                        GroupName="Sex" />
                    <Lay:LayRadioButton
                        Content="女"
                        FontSize="16"
                        GroupName="Sex" />
                    <Lay:LayRadioButton
                        Content="其他"
                        FontSize="16"
                        GroupName="Sex"
                        IsEnabled="false" />
                </StackPanel>
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <Lay:LaySwitch
                        FontSize="16"
                        Foreground="White"
                        IsChecked="True" />
                </StackPanel>
                <Lay:LayTextBox
                    Width="auto"
                    Height="150"
                    Margin="0,5"
                    VerticalContentAlignment="Top"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Visible"
                    Watermark="可换行文本框" />
            </StackPanel>
            <Lay:LayButton
                HorizontalAlignment="Left"
                Content="立即提交"
                Type="Default" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
