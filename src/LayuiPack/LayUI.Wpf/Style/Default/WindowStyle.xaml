                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="1" ClipToBounds="True">
                                        <ContentPresenter UseLayoutRounding="false" />
                                    </Grid>
                                </Grid>
                            </AdornerDecorator>
